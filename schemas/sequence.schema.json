{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "https://motionplate.dev/schemas/sequence.schema.json",
    "title": "MotionPlate Sequence",
    "description": "A MotionPlate sequence.json â€” defines plates, effects, transitions, text, and export metadata.",
    "type": "object",
    "required": [
        "meta",
        "plates"
    ],
    "additionalProperties": false,
    "properties": {
        "meta": {
            "type": "object",
            "required": [
                "title",
                "fps",
                "width",
                "height",
                "schemaVersion"
            ],
            "additionalProperties": false,
            "properties": {
                "title": {
                    "type": "string",
                    "minLength": 1
                },
                "fps": {
                    "type": "number",
                    "minimum": 1,
                    "maximum": 120
                },
                "width": {
                    "type": "integer",
                    "minimum": 1
                },
                "height": {
                    "type": "integer",
                    "minimum": 1
                },
                "schemaVersion": {
                    "type": "string",
                    "pattern": "^\\d+\\.\\d+\\.\\d+$"
                }
            }
        },
        "plates": {
            "type": "array",
            "minItems": 0,
            "items": {
                "type": "object",
                "required": [
                    "id",
                    "duration",
                    "effect",
                    "transition"
                ],
                "additionalProperties": false,
                "properties": {
                    "id": {
                        "type": "string",
                        "minLength": 1
                    },
                    "duration": {
                        "type": "number",
                        "minimum": 0.1
                    },
                    "effect": {
                        "type": "string",
                        "enum": [
                            "kenBurns",
                            "pulse",
                            "drift",
                            "rotate",
                            "static"
                        ]
                    },
                    "effectConfig": {
                        "type": "object"
                    },
                    "post": {
                        "type": "array",
                        "items": {
                            "type": "string",
                            "enum": [
                                "vignette",
                                "bloom",
                                "particles",
                                "fog",
                                "chromaticAberration",
                                "screenShake"
                            ]
                        },
                        "uniqueItems": true
                    },
                    "postConfig": {
                        "type": "object"
                    },
                    "transition": {
                        "type": "string",
                        "enum": [
                            "cut",
                            "crossfade",
                            "fadeThroughBlack",
                            "fadeThroughWhite",
                            "lightBleed"
                        ]
                    },
                    "transitionDuration": {
                        "type": "number",
                        "minimum": 0
                    },
                    "text": {
                        "type": "string"
                    },
                    "textConfig": {
                        "type": "object",
                        "additionalProperties": false,
                        "properties": {
                            "fontSize": {
                                "type": "number",
                                "minimum": 1
                            },
                            "fontFamily": {
                                "type": "string"
                            },
                            "color": {
                                "type": "string"
                            },
                            "position": {
                                "type": "string",
                                "enum": [
                                    "top",
                                    "center",
                                    "bottom"
                                ]
                            },
                            "fadeIn": {
                                "type": "number",
                                "minimum": 0,
                                "maximum": 1
                            },
                            "fadeOut": {
                                "type": "number",
                                "minimum": 0,
                                "maximum": 1
                            },
                            "maxWidth": {
                                "type": "number",
                                "minimum": 0,
                                "maximum": 1
                            },
                            "shadow": {
                                "type": "boolean"
                            },
                            "lineHeight": {
                                "type": "number",
                                "minimum": 0
                            }
                        }
                    }
                }
            }
        }
    }
}